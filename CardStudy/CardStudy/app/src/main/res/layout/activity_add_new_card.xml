<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewCardActivity">

    <TextView
        android:id="@+id/question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вопрос: "
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_question"/>

    <EditText
        android:id="@+id/edit_question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Введите вопрос сюда"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/question_txt" />

    <TextView
        android:id="@+id/answer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ответ: "
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit_question"
        app:layout_constraintBottom_toTopOf="@id/edit_answer"/>


    <EditText
        android:id="@+id/edit_answer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Введите ответ сюда"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/answer_txt" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/add_btn"
        app:borderWidth="0dp"/>

</android.support.constraint.ConstraintLayout>